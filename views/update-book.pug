extends layout.pug

block content
    h1 Update Book
    form
        p
            label(for='title') Title
            input#title(name='title', type='text', value='A Brief History of Time')
        p
            label(for='author') Author
            input#author(name='author', type='text', value='Stephen Hawking')
        p
            label(for='genre') Genre
            input#genre(name='genre', type='text', value='Non-fiction')
        p
            label(for='year') Year
            input#year(name='year', type='text', value='1988')
        p
            input(type='submit', value='Update Book')
    form(method='post', action='/books/:id/delete', onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href='/books') Cancel
        p
            input(type='submit', value='Delete Book')
